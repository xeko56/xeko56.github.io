---
import BannerImage from "../images/banner1.svg?raw";

// Hero.astro
export interface Props {
	title?: string;
	subtitle1?: string;
	subtitle2?: string;
	description?: string;
	ctaText?: string;
	ctaLink?: string;
	contactText?: string;
	contactLink?: string;
	imageUrl?: string;
	imageAlt?: string;
}

const {
	title = "Hi, I'm Nhat Tan,",
	subtitle1 = "a ",
	subtitle2 = "Full-Stack Developer",
	description = "I create beautiful, responsive web applications using modern technologies. Passionate about clean code, user experience, and bringing ideas to life through technology.",
	ctaText = "See My Work",
	ctaLink = "/projects",
	contactText = "Get In Touch",
	contactLink = "/contact",
	imageUrl = "../images/banner1.svg",
	imageAlt = "Developer illustration",
} = Astro.props;
---

<section class="relative flex items-center py-12 lg:py-18 overflow-hidden">
	<!-- Background gradient -->
	<div
		class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-primary-100 opacity-60"
	>
	</div>

	<!-- Floating elements for decoration -->
	<div
		class="absolute top-20 left-10 w-20 h-20 bg-primary-200 rounded-full opacity-20 animate-bounce-slow"
	>
	</div>
	<div
		class="absolute top-40 right-20 w-16 h-16 bg-primary-300 rounded-full opacity-30 animate-float"
	>
	</div>
	<div
		class="absolute bottom-20 left-20 w-12 h-12 bg-primary-400 rounded-full opacity-25 animate-pulse"
	>
	</div>

	<div class="relative mx-auto px-4 sm:px-6 lg:px-8 w-full">
		<div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
			<!-- Left Column - Content -->
			<div class="space-y-8 text-center lg:text-left">
				<!-- Title with animation -->
				<div class="space-y-4">
					<h1
						class="text-2xl sm:text-4xl md:text-4xl lg:text-4xl xl:text-4xl font-bold text-gray-900 leading-tight animate-fade-in-up"
					>
						{title}
					</h1>
					<h1
						class="text-2xl sm:text-4xl md:text-4xl lg:text-4xl xl:text-4xl font-bold text-gray-900 animate-fade-in-up animation-delay-200"
					>
						{subtitle1}
						<span
							class="text-white bg-violet-600 px-4 py-2 rounded-lg shadow-lg"
							>{subtitle2}</span
						>
					</h1>
				</div>

				<!-- Description -->
				<p
					class="text-lg text-gray-600 leading-relaxed max-w-xl mx-auto lg:mx-0 animate-fade-in-up animation-delay-400"
				>
					{description}
				</p>

				<!-- CTA Buttons -->
				<div
					class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up animation-delay-600"
				>
					<a
						href={ctaLink}
						class="bg-violet-600 hover:bg-violet-700 text-white font-medium px-6 py-3 rounded-lg transition-colors inline-flex items-center justify-center group transform hover:scale-105 duration-300 shadow-lg hover:shadow-xl"
					>
						<span>{ctaText}</span>
						<svg
							class="ml-2 w-5 h-5 transform group-hover:translate-x-1 transition-transform"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
						</svg>
					</a>

					<a
						href={contactLink}
						class="bg-gray-200 hover:bg-gray-300 text-gray-900 font-medium px-6 py-3 rounded-lg transition-colors inline-flex items-center justify-center group transform hover:scale-105 duration-300"
					>
						<svg
							class="mr-2 w-5 h-5"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
							></path>
						</svg>
						<span>{contactText}</span>
					</a>
				</div>

				<!-- Social proof or stats (optional) -->
				<div
					class="flex items-center justify-center lg:justify-start space-x-8 text-sm text-gray-500 animate-fade-in-up animation-delay-800"
				>
					<div class="flex items-center space-x-2">
						<div
							class="w-2 h-2 bg-green-500 rounded-full animate-pulse"
						>
						</div>
						<span>Available for work</span>
					</div>
					<div class="flex items-center space-x-2">
						<svg
							class="w-4 h-4"
							fill="currentColor"
							viewBox="0 0 20 20"
						>
							<path
								d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
							></path>
						</svg>
						<span>5.0 rating</span>
					</div>
				</div>
			</div>

			<!-- Right Column - Image -->
			<div class="relative animate-fade-in-right">
				<!-- Image container with hover effects -->
				<div class="relative group">
					<!-- Decorative background -->
					<div
						class="relative bg-white rounded-2xl shadow-2xl overflow-hidden transform group-hover:scale-105 transition-all duration-500"
					>
						<div
							class="w-full h-full flex items-center justify-center p-6"
						>
							<div
								class="max-w-full max-h-full [&>svg]:w-full [&>svg]:h-full [&>svg]:max-w-full [&>svg]:max-h-full animate-float-gentle"
								set:html={BannerImage}
							/>
						</div>
					</div>

					<!-- Floating code elements -->
					<div
						class="absolute -top-4 -left-4 bg-white rounded-lg shadow-lg p-3 animate-bounce-slow hidden lg:block"
					>
						<div class="flex items-center space-x-2">
							<div class="w-3 h-3 bg-red-500 rounded-full"></div>
							<div class="w-3 h-3 bg-yellow-500 rounded-full">
							</div>
							<div class="w-3 h-3 bg-green-500 rounded-full">
							</div>
						</div>
						<div class="mt-2 text-xs font-mono text-gray-600">
							console.log('Xin chao!');
						</div>
					</div>

					<!-- Floating stats -->
					<!-- <div
						class="absolute -bottom-4 -right-4 bg-white rounded-xl shadow-lg p-4 animate-float hidden lg:block"
					>
						<div class="text-2xl font-bold text-primary-600">
							50+
						</div>
						<div class="text-sm text-gray-600">Projects</div>
					</div> -->
					<div
						class="absolute -bottom-4 -right-4 bg-white rounded-xl shadow-lg p-4 animate-float hidden lg:block"
					>
						<div class="text-2xl font-bold text-gray-900">4+</div>
						<div class="text-sm text-gray-600">Years Exp</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Custom animations */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInRight {
		from {
			opacity: 0;
			transform: translateX(30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	@keyframes floatGentle {
		0%,
		100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@keyframes bounceGentle {
		0%,
		100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-5px);
		}
	}

	.animate-fade-in-up {
		animation: fadeInUp 0.8s ease-out forwards;
	}

	.animate-fade-in-right {
		animation: fadeInRight 1s ease-out forwards;
	}

	.animate-float {
		animation: float 6s ease-in-out infinite;
	}

	.animate-float-gentle {
		animation: floatGentle 4s ease-in-out infinite;
	}

	.animate-bounce-slow {
		animation: bounceGentle 3s ease-in-out infinite;
	}

	.animation-delay-200 {
		animation-delay: 0.2s;
	}

	.animation-delay-400 {
		animation-delay: 0.4s;
	}

	.animation-delay-600 {
		animation-delay: 0.6s;
	}

	.animation-delay-800 {
		animation-delay: 0.8s;
	}

	/* Initially hide elements that will animate in */
	.animate-fade-in-up,
	.animate-fade-in-right {
		opacity: 0;
	}

	/* Ensure animations run */
	.animate-fade-in-up {
		animation-fill-mode: forwards;
	}

	.animate-fade-in-right {
		animation-fill-mode: forwards;
	}
</style>
